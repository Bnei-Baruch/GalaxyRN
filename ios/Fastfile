# Fastlane configuration for iOS deployment
# Documentation: https://docs.fastlane.tools/

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Ensure we're on the latest version
    ensure_git_status_clean
    
    # Increment build number
    increment_build_number(
      xcodeproj: "GalaxyRN.xcodeproj"
    )
    
    # Build the app
    build_app(
      workspace: "GalaxyRN.xcworkspace",
      scheme: "GalaxyRN",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "GalaxyRN.ipa"
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Push a new release build to the App Store"
  lane :release do
    # Ensure we're on the latest version
    ensure_git_status_clean
    
    # Increment build number
    increment_build_number(
      xcodeproj: "GalaxyRN.xcodeproj"
    )
    
    # Build the app
    build_app(
      workspace: "GalaxyRN.xcworkspace",
      scheme: "GalaxyRN",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "GalaxyRN.ipa"
    )
    
    # Upload to App Store
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      submit_for_review: false
    )
  end

  desc "Build only (no upload)"
  lane :build_only do
    build_app(
      workspace: "GalaxyRN.xcworkspace",
      scheme: "GalaxyRN",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "GalaxyRN.ipa"
    )
  end

  desc "Update metadata only"
  lane :update_metadata do
    upload_to_app_store(
      skip_binary_upload: true,
      skip_screenshots: false
    )
  end
end

